{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "includes": ["src/**/*"],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "nursery": {
        "noFloatingPromises": "error"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  }
}
